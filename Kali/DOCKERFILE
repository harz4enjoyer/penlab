FROM kalilinux/kali-last-release

# Update package lists
RUN apt-get update

# Install basic tools that are commonly needed
RUN apt-get install -y \
    curl \
    wget \
    vim \
    nano \
    net-tools \
    iputils-ping \
    dnsutils \
    hashcat \
    sudo \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

CMD ["/bin/bash"]
